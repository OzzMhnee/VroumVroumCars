{% extends 'base.html.twig' %}

{% block title %}{{ brand.name }}{% endblock %}

{% block body %}

    <div class="d-flex flex-column align-items-center">
        <img src="/img/brands/{{ brand.imgBrand }}" alt="{{ brand.name }}" class="img-fluid mt-5" style="width: 100px; height: auto;">
        <h1>{{ brand.name }}</h1>

        <!-- Onglets Bootstrap -->
        <ul class="nav nav-tabs mt-4" id="carTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all-cars" type="button" role="tab" aria-controls="all-cars" aria-selected="true">
                    Toutes
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="electric-tab" data-bs-toggle="tab" data-bs-target="#electric-cars" type="button" role="tab" aria-controls="electric-cars" aria-selected="false">
                    Électriques
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="non-electric-tab" data-bs-toggle="tab" data-bs-target="#non-electric-cars" type="button" role="tab" aria-controls="non-electric-cars" aria-selected="false">
                    Non électriques
                </button>
            </li>
        </ul>

        <div class="tab-content w-50 mt-4" id="carTabsContent">
            <!-- Toutes les voitures -->
            <div class="tab-pane fade show active" id="all-cars" role="tabpanel" aria-labelledby="all-tab">
                <div class="row justify-content-center">
                    {% for car in brand.cars %}
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm h-100 rounded-pill ">
                                <div class="card-body text-center">
                                    <h5 class="card-title">{{ car.name }}</h5>
                                    <p class="card-text mb-1"><strong>Année :</strong> {{ car.circulationAt|date('Y') }}</p>
                                    <img src="{{ asset('img/cars/' ~ car.imgCar) }}" class="card-img-top" alt="{{ car.name }}" style="height: 180px; object-fit: contain;">
                                    <p class="card-text mb-1"><strong>Portes :</strong> {{ car.DoorsNumber }}</p>
                                    <span class="badge {{ car.isElectric ? 'bg-success' : 'bg-secondary' }}">
                                        {{ car.isElectric ? 'Électrique' : 'Thermique' }}
                                    </span>
                                    <div class="mt-3">
                                        <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-outline-primary btn-sm">Détail</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center text-muted mt-4">Aucune voiture pour cette marque.</div>
                    {% endfor %}
                </div>
            </div>
            <!-- Voitures électriques -->
            <div class="tab-pane fade" id="electric-cars" role="tabpanel" aria-labelledby="electric-tab">
                <div class="row justify-content-center">
                    {% set found = false %}
                    {% for car in brand.cars %}
                        {% if car.isElectric %}
                            {% set found = true %}
                            <div class="col-md-4 mb-4">
                                <div class="card shadow-sm h-100 rounded-pill ">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">{{ car.name }}</h5>
                                        <p class="card-text mb-1"><strong>Année :</strong> {{ car.circulationAt|date('Y') }}</p>
                                        <img src="{{ asset('img/cars/' ~ car.imgCar) }}" class="card-img-top" alt="{{ car.name }}" style="height: 180px; object-fit: contain;">
                                        <p class="card-text mb-1"><strong>Portes :</strong> {{ car.DoorsNumber }}</p>
                                        <span class="badge bg-success">Électrique</span>
                                        <div class="mt-3">
                                            <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-outline-primary btn-sm">Détail</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    {% if not found %}
                        <div class="text-center text-muted mt-4">Aucune voiture électrique pour cette marque.</div>
                    {% endif %}
                </div>
            </div>
            <!-- Voitures non électriques -->
            <div class="tab-pane fade" id="non-electric-cars" role="tabpanel" aria-labelledby="non-electric-tab">
                <div class="row justify-content-center">
                    {% set found = false %}
                    {% for car in brand.cars %}
                        {% if not car.isElectric %}
                            {% set found = true %}
                            <div class="col-md-4 mb-4">
                                <div class="card shadow-sm h-100 rounded-pill ">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">{{ car.name }}</h5>
                                        <p class="card-text mb-1"><strong>Année :</strong> {{ car.circulationAt|date('Y') }}</p>
                                        <img src="{{ asset('img/cars/' ~ car.imgCar) }}" class="card-img-top" alt="{{ car.name }}" style="height: 180px; object-fit: cover;">
                                        <p class="card-text mb-1"><strong>Portes :</strong> {{ car.DoorsNumber }}</p>
                                        <span class="badge bg-secondary">Thermique</span>
                                        <div class="mt-3">
                                            <a href="{{ path('app_car_show', {'id': car.id}) }}" class="btn btn-outline-primary btn-sm">Détail</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                    {% if not found %}
                        <div class="text-center text-muted mt-4">Aucune voiture thermique pour cette marque.</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
